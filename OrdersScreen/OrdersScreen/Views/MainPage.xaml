<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OrdersScreen.Views"
             x:Class="OrdersScreen.Views.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label" x:Key="OrderLblStyle">
                <Setter Property="TextColor" Value="#a0a870" />
                <Setter Property="FontSize" Value="11" />
            </Style>
            <Style TargetType="Label" x:Key="OrderHeaderLblStyle">
                <Setter Property="TextColor" Value="#a6acbc" />
                <Setter Property="FontSize" Value="11" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout BackgroundColor="#252839" Padding="0" Margin="0" Spacing="0">
            <Button BackgroundColor="#aaa" x:Name="btnRunApp" Text="Run" Margin="0"></Button>
            <Button BackgroundColor="#aaa" x:Name="btnAddOrder" Text="AddOrder"></Button>
            <Button BackgroundColor="#aaa" x:Name="btnUpdateOrder" Text="UpdateOrder"></Button>

            <Frame HeightRequest="40" BackgroundColor="#2b333e"  Padding="0">
                <Label FontSize="16" Margin="14,0,0,0" TextColor="#a6acbc" VerticalTextAlignment="Center">Histórico</Label>
            </Frame>
            <BoxView HeightRequest="1.6" Color="#a6acbc"></BoxView>
            <Frame BackgroundColor="#2b333e"  Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition >
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" FontSize="10" Margin="14,2,0,0" TextColor="#a6acbc" VerticalOptions="Start" HorizontalOptions="Start">ORDENS EM ABERTO</Label>
                    <Label Grid.Row="0" Grid.Column="1" FontSize="10" Margin="0,2,2,0" TextColor="#a6acbc" VerticalOptions="Start" HorizontalOptions="End">Total Quantidade:</Label>
                    <Label Grid.Row="0" Grid.Column="2" FontSize="10" Margin="0,2,14,0" TextColor="#a6acbc" VerticalOptions="Start" HorizontalOptions="Start" Text="{Binding Count}"></Label>
                </Grid>
            </Frame>
            <!-- DataGridHeader -->
            <Frame BackgroundColor="#1a2030"  Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="120"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">Id</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center">DATA E HORA</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">ASSESSOR</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center">CONTA</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="4" HorizontalOptions="Center" VerticalOptions="Center">ATIVO</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="5" HorizontalOptions="Center" VerticalOptions="Center">TIPO</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="6" HorizontalOptions="Center" VerticalOptions="Center">QTD.</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="7" HorizontalOptions="Center" VerticalOptions="Center">QTD. APARENTE</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="8" HorizontalOptions="Center" VerticalOptions="Center">QTD. DISP</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="9" HorizontalOptions="Center" VerticalOptions="Center">QTD. CANCEL</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="10" HorizontalOptions="Center" VerticalOptions="Center">QTD. EXEC</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="11" HorizontalOptions="Center" VerticalOptions="Center">VALOR</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="12" HorizontalOptions="Center" VerticalOptions="Center">VALOR DISP</Label>
                    <Label Style="{StaticResource OrderHeaderLblStyle}" Grid.Row="0" Grid.Column="13" HorizontalOptions="Center" VerticalOptions="Center">OBJETIVO</Label>
                </Grid>
            </Frame>
            
            <!-- DataGridList -->
            <ListView CachingStrategy="RecycleElement" ItemsSource="{Binding Orders}" BackgroundColor="#1a2030">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Tapped="ViewCell_Tapped">
                            <Frame x:Name="ViewCellFrame" BackgroundColor="#252839" Padding="0">
                                <Grid ColumnSpacing="0" RowSpacing="0" Padding="0" Margin="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="120"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="0" Text="{Binding Id}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Start" VerticalOptions="Center" Grid.Column="1" Text="{Binding CreationDate}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="2" Text="{Binding Advisor}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="3" Text="{Binding Account}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="4" Text="{Binding Symbol}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="5" Text="{Binding OrdType}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="6" Text="{Binding OrdQty}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="7" Text="{Binding OrdQtyApparent}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="8" Text="{Binding LeavesQty}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="9" Text="{Binding CancelledQty}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="10" Text="{Binding CumQty}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="11" Text="{Binding TotalValue}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="12" Text="{Binding AvailableValue}"></Label>
                                    <Label Style="{StaticResource OrderLblStyle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="13" Text="{Binding GoalValue}"></Label>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>