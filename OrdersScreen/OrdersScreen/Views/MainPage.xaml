<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OrdersScreen.Views"
             x:Class="OrdersScreen.Views.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="btnAddOrder" Text="AddOrder"></Button>
            <Button x:Name="btnUpdateOrder" Text="UpdateOrder"></Button>
            <local:OrdersHistoryView x:Name="ordersHistoryView"></local:OrdersHistoryView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>